{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "es2020",
        "module": "commonjs",
        "lib": ["es2017", "es7", "es6"],
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "paths": {
            "@routes/*": ["./routes/*"],
            "@components": ["./components"],
            "@utils/*": ["./utils/*"],
            "@hooks/*": ["./hooks/*"],
            "@types": ["./types"],
            "@config": ["./config"]
        }
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*"]
}
