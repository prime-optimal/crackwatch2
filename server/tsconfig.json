{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2020",
        "module": "commonjs",
        "lib": ["es2017", "es7", "es6", "ESNext"],
        "outDir": "dist",
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "paths": {
            "@routes/*": ["./src/routes/*"],
            "@components": ["./src/components"],
            "@utils": ["./src/utils"],
            "@hooks/*": ["./src/hooks/*"],
            "@types": ["./src/types"],
            "@config": ["./src/config"],
            "@mongo": ["./src/mongo"]
        }
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*"]
}
